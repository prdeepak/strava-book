{
  "name": "Strava Book Dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/app",
  "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind",

  "containerEnv": {
    "DEVCONTAINER": "1"
  },

  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/root/.claude,type=bind",
    "source=${localEnv:HOME}/.aws,target=/root/.aws,type=bind,readonly",
    "source=strava-book-node-modules,target=/app/web/node_modules,type=volume"
  ],

  "forwardPorts": [3000],

  "postCreateCommand": "cd /app/web && ./scripts/smart-npm-install.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss"
      ]
    }
  }
}
