{
  "permissions": {
    "allow": [
      "WebSearch",
      "Bash(make:*)",
      "Bash(npm:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)"
    ]
  },
  "hooks": {
