          {
            "type": "command",
            "command": "/Users/deepak/bin/strava-book/.claude/hooks/eslint-fix.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/deepak/bin/strava-book/.claude/hooks/stop-hook.sh"
          }
        ]
      }
    ]
  }
}
